{
  "name": "pipal-backend",
  "version": "1.0.0",
  "description": "Social Shopping App Backend - Node.js monolith with PostgreSQL, Redis, AWS S3, AWS IVS",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "db:reset": "knex migrate:rollback --all && knex migrate:latest && knex seed:run",
    "db:status": "knex migrate:status"
  },
  "keywords": [
    "social",
    "shopping",
    "live",
    "ecommerce",
    "mobile"
  ],
  "author": "Pipal Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-ivs": "^3.839.0",
    "@aws-sdk/client-s3": "^3.839.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.1",
    "knex": "^2.5.1",
    "pg": "^8.11.1",
    "redis": "^4.6.7",
    "socket.io": "^4.7.2",
    "stripe": "^12.12.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@eslint/config-array": "^0.21.0",
    "@eslint/js": "^9.30.0",
    "@types/jest": "^29.5.3",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3"
  }
}
